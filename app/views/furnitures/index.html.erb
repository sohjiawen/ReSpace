<div class="container">
  <!-- Top navigation bar -->
  <div class="marketplace-nav mt-3">
    <div class="row d-flex justify-content-around align-items-center">
      <div class="search d-flex">
        <div class="search-bar">
          <%= form_tag furnitures_path, method: :get do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Search"
            %>
        </div>
        <div class="marketplace-icon">
            <%= button_tag(class: 'search-button') do %>
              <i class="fas fa-search"></i>
            <% end %>
        </div>
        <% end %>
      </div>
      <div class="marketplace-icons d-flex justify-content-center">
        <div class="marketplace-icon">
          <a href="/myprofile">
            <i class="far fa-star text-white"></i>
          </a>
        </div>
        <div class="text-white marketplace-icon">
          <i class="far fa-comment-alt"></i>
        </div>
        <div class="text-white marketplace-icon">
          <%= link_to carts_path do %>
            <i class="fas fa-shopping-cart"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Theme filters -->
  <div class="slider mt-2">
    <%= link_to 'All', furnitures_path, class: 'btn-marketplace btn-marketplace-color' %>
    <% Theme::THEMES.each do |theme| %>
      <%= link_to theme[:name], furnitures_path(theme_name: theme[:name]), class: 'btn-marketplace btn-marketplace-color' %>
    <% end %>
  </div>

  <%# <!-- Sorting -->
  <div class='container d-flex justify-content-end'>
    <select name="sorting" id="sorting-options">
      <option value="" disabled selected>Sort by</option>
      <option value="date-asc">Most Recent</option>
      <option value="price-asc">Price (Low to High)</option>
      <option value="price-desc">Price (High to Low)</option>
    </select>
  </div> %>

  <div class="container">
    <div class="row d-flex justify-content-center">
      <% @furnitures.each do |furniture| %>
        <%= link_to furniture_path(furniture) do %>
        <div class=“col-lg-4 text-right”>
          <div id="furniture-<%= furniture.id %>" class="furniture-card" style="width: 140px; height: 230px">
            <img src= "<%= furniture.thumbnail_url %>" alt="thumbnail" style="width: 120px; height: 120px" class="center">
            <div class="container">
              <div class="d-flex justify-content-between mt-2 text-blue">
                <!-- furniture name and button to add to favorites -->
                <h5 class="card-title"><%= furniture.name.truncate(10) %></h5>
                <%= link_to '+', marketplace_ar_items_path(furniture_id: furniture.id), method: 'post', remote: true, class: "btn btn-primary" %>
              </div>
              <p class="text-muted">$<%= furniture.price %></p>
            </div>
            <!-- <div class="card-body">

            </div> -->
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>