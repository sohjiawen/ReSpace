<div class="container">
  <div class="mt-3">
    <div class="row d-flex align-items-center">
      <div class="col-1">
        <a href="#">
          <i class="fas fa-chevron-left text-white"></i>
        </a>
      </div>
      <div class="col-5">
        <input type="text" class="form-control" placeholder="search for an item" style="border-radius: 10px">
      </div>
      <div class="col-2">
        <a href="/myprofile">
          <i class="far fa-star text-white"></i>
        </a>
      </div>
      <div class="col-2 text-white">
        <i class="far fa-comment-alt"></i>
      </div>
      <div class="col-2 text-white">
        <i class="fas fa-shopping-cart"></i>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="slider mt-2">
      <a class="btn-marketplace btn-marketplace-color" href="#">Minimalist</a>
      <a class="btn-marketplace btn-marketplace-color" href="#">Beach</a>
      <a class="btn-marketplace btn-marketplace-color" href="#">Comfy</a>
      <a class="btn-marketplace btn-marketplace-color" href="#">Gamer</a>
      <a class="btn-marketplace btn-marketplace-color" href="#">Nature</a>
      <a class="btn-marketplace btn-marketplace-color" href="#">Eclectic</a>
    </div>
  </div>

  <div class="container">
    <div class="row d-flex justify-content-center">
      <% @furnitures.each do |furniture| %>
        <%= link_to furniture_path(furniture) do %>
        <div class=“col-lg-4 text-right”>
          <div id="furniture-<%= furniture.id %>" class="furniture-card" style="width: 140px; height: 230px">
            <img src= "<%= furniture.thumbnail_url %>" alt="thumbnail" style="width: 120px; height: 120px" class="center">
            <div class="container">
              <div class="d-flex justify-content-between mt-2 text-blue">
                <!-- furniture name and button to add to favorites -->
                <h5 class="card-title"><%= furniture.name.truncate(10) %></h5>
                <%= link_to '+', marketplace_ar_items_path(furniture_id: furniture.id), method: 'post', remote: true, class: "btn btn-primary" %>
              </div>
              <p class="text-muted">$<%= furniture.price %></p>
            </div>
            <!-- <div class="card-body">

            </div> -->
          </div>
        </div>
        <% end %>
      <% end %>
    </div>
  </div>

</div>
