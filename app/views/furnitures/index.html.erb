<div class="container">
  <div class="mt-3">
    <form>
      <div class="row">
        <div class="col-1">
          <a href="#">
            <i class="fas fa-chevron-left"></i>
          </a>
        </div>
        <div class="col-5">
          <input type="text" class="form-control" placeholder="search for an item">
        </div>
        <div class="col-2 text-white">
          <i class="far fa-star"></i>
        </div>
        <div class="col-2 text-white">
          <i class="far fa-comment-alt"></i>
        </div>
        <div class="col-2 text-white">
          <i class="fas fa-shopping-cart"></i>
        </div>
      </div>
    </form>
  </div>
  <div>
    <a class="btn-marketplace btn-marketplace-color" href="#">Minimalist</a>
    <a class="btn-marketplace btn-marketplace-color" href="#">Beach</a>
    <a class="btn-marketplace btn-marketplace-color" href="#">Comfy</a>
    <a class="btn-marketplace btn-marketplace-color" href="#">Gamer</a>
    <a class="btn-marketplace btn-marketplace-color" href="#">Nature</a>
    <a class="btn-marketplace btn-marketplace-color" href="#">Eclectic</a>
  </div>

  <div class="row text-center">
    <% @furnitures.each do |furniture| %>
    <div class=“col-6 col-lg-4 text-right”>
      <div class="card" style="width: 140px; height: 230px">
        <img src= "<%= furniture.thumbnail_url %>" alt="thumbnail" style="width: 136px; height: 136px">
        <div class="text-right">
          <a href="#" class="btn btn-primary btn-plus">+</a>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%=link_to furniture.name, furniture_path(furniture) %></h5>
          <p class="text-muted">$<%= furniture.price %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
